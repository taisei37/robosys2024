import sys

def number_to_word():
    # 数字と対応する誕生石、誕生花の定義
    stones = [
        "ガーネット", "アメジスト", "アクアマリン", "ダイヤモンド",
        "エメラルド", "パール", "ルビー", "ペリドット",
        "サファイア", "オパール", "トパーズ", "ターコイズ"
    ]
    flowers = [
        "スイセン", "ウメ", "サクラ", "チューリップ",
        "バラ", "アジサイ", "ヒマワリ", "ユリ",
        "キキョウ", "コスモス", "キク", "ポインセチア"
    ]

    print("あなたの誕生月を入力してください。\n終了させたい場合はfinを入力")
    
    for intxt in sys.stdin:  # 標準入力から読み取り
        intxt = intxt.strip()

        if intxt.lower() == "fin":
            print("プログラムを終了")
            break


        try:
            month = int(intxt)  # 改行を取り除いて整数に変換
            if 1 <= month <= 12:
                stone = stones[month - 1]
                flower = flowers[month - 1]
                print(f"あなたの誕生月は: {month}月\n誕生石: {stone}\n誕生花: {flower}\n続ける場合は誕生月を入力。終了させたい場合はfinを入力")
            else:
                print("エラー: 月は1から12の範囲で入力してください。")
        except ValueError:
            print("エラー: 有効な数字を入力してください。")

if __name__ == "__main__":
    number_to_word()
